Manager:
    MainScreen:
    Chess:


<MainScreen>
    name: "MainScreen"

    Image:
        size: root.width, root.height
        source: r'C:\Users\scorp\Desktop\Programmin\Chess Game\images\peakpx.jpg'
    GridLayout:

        size_hint: 0.6, 0.7
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        spacing: "12dp"
        padding: "12dp"

        cols: 1



        NextButton:
            text : "Black Player"

            size_hint: None, None
            size: self.parent.width if self.parent else 0, 200
            font_size: 28
            player: 'black'
            on_release:
                app.root.current = "Chess"
                self.on_release


            background_normal: ''
            background_color: 73/255, 65/255, 52/255, 1

        NextButton:
            text : "White Player"

            size_hint: None, None
            size: self.parent.width if self.parent else 0, 200
            font_size: 28
            player: 'white'
            on_release:
                app.root.current = "Chess"
                self.on_release

            background_normal: ''
            background_color: 73/255, 65/255, 52/255, 1

<CustomButton>
    size_hint: None, None
    size: self.parent.width/8 if self.parent else 0, self.parent.height/8 if self.parent else 0
    on_release: root.on_release()
    background_normal: ''
    #background_down: r'C:\Users\scorp\Desktop\Programmin\Chess Game\images\Nothing.png'

<CustomImage>
    size_hint: None, None
    size: self.texture_size
    pos: (self.parent.center_x - self.width / 2), (self.parent.center_y - self.height / 2)


